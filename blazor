public class LoginService
{
    private readonly CustomAuthStateProvider _authStateProvider;
    private readonly IHttpContextAccessor _httpContextAccessor;

    public LoginService(CustomAuthStateProvider authStateProvider, IHttpContextAccessor httpContextAccessor)
    {
        _authStateProvider = authStateProvider;
        _httpContextAccessor = httpContextAccessor;
    }

    public async Task LoginAsync(string username, string password)
    {
        // Validate user credentials and generate JWT token
        string token = GenerateJwtToken(username, password); // Implement token generation logic

        // Update authentication state
        _authStateProvider.MarkUserAsAuthenticated(token);
    }

    private string GenerateJwtToken(string username, string password)
    {
        // Your logic to validate user and generate token
        return "yourJwtToken";
    }
}
